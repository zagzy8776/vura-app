# ==========================================
# VURA BANK - ENVIRONMENT CONFIGURATION
# ==========================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=24h

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Encryption (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Yellow Card API (Crypto Deposits)
YELLOWCARD_API_KEY=your-yellowcard-api-key
YELLOWCARD_API_SECRET=your-yellowcard-api-secret
YELLOWCARD_WEBHOOK_SECRET=your-webhook-secret

# Server
PORT=3000
NODE_ENV=development

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# BVN Verification (YouVerify or VerifyMe)
BVN_API_KEY=your-bvn-api-key
BVN_API_SECRET=your-bvn-api-secret

# Email/SMS (SendGrid, Twilio)
SENDGRID_API_KEY=your-sendgrid-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-phone

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:8087
